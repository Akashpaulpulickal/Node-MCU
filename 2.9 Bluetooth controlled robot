# Import necessary libraries
import RPi.GPIO as GPIO
import time
import serial

# Set up GPIO mode
GPIO.setmode(GPIO.BCM)

# Define GPIO pins for motor driver
IN1 = 17
IN2 = 18
IN3 = 22
IN4 = 23

# Set up motor driver pins as output
GPIO.setup(IN1, GPIO.OUT)
GPIO.setup(IN2, GPIO.OUT)
GPIO.setup(IN3, GPIO.OUT)
GPIO.setup(IN4, GPIO.OUT)

# Set up serial communication with Bluetooth module
ser = serial.Serial('/dev/ttyAMA0', 9600)

def move_forward():
    GPIO.output(IN1, GPIO.HIGH)
    GPIO.output(IN2, GPIO.LOW)
    GPIO.output(IN3, GPIO.HIGH)
    GPIO.output(IN4, GPIO.LOW)

def move_backward():
    GPIO.output(IN1, GPIO.LOW)
    GPIO.output(IN2, GPIO.HIGH)
    GPIO.output(IN3, GPIO.LOW)
    GPIO.output(IN4, GPIO.HIGH)

def turn_left():
    GPIO.output(IN1, GPIO.LOW)
    GPIO.output(IN2, GPIO.HIGH)
    GPIO.output(IN3, GPIO.HIGH)
    GPIO.output(IN4, GPIO.LOW)

def turn_right():
    GPIO.output(IN1, GPIO.HIGH)
    GPIO.output(IN2, GPIO.LOW)
    GPIO.output(IN3, GPIO.LOW)
    GPIO.output(IN4, GPIO.HIGH)

def stop():
    GPIO.output(IN1, GPIO.LOW)
    GPIO.output(IN2, GPIO.LOW)
    GPIO.output(IN3, GPIO.LOW)
    GPIO.output(IN4, GPIO.LOW)

try:
    while True:
        if ser.in_waiting > 0:
            command = ser.read().decode('utf-8')
            if command == 'F':
                move_forward()
            elif command == 'B':
                move_backward()
            elif command == 'L':
                turn_left()
            elif command == 'R':
                turn_right()
            elif command == 'S':
                stop()
        time.sleep(0.1)

except KeyboardInterrupt:
    print("Program terminated")

finally:
    GPIO.cleanup()

# Connections:
# - VCC pin of the Bluetooth module to the 3.3V pin of the Raspberry Pi.
# - GND pin of the Bluetooth module to the GND pin of the Raspberry Pi.
# - TXD pin of the Bluetooth module to the RXD pin of the Raspberry Pi (GPIO 15).
# - RXD pin of the Bluetooth module to the TXD pin of the Raspberry Pi (GPIO 14).
# - IN1 of the motor driver to GPIO pin 17 (BCM numbering) of the Raspberry Pi.
# - IN2 of the motor driver to GPIO pin 18 (BCM numbering) of the Raspberry Pi.
# - IN3 of the motor driver to GPIO pin 22 (BCM numbering) of the Raspberry Pi.
# - IN4 of the motor driver to GPIO pin 23 (BCM numbering) of the Raspberry Pi.
# - VCC of the motor driver to the 5V pin of the Raspberry Pi.
# - GND of the motor driver to the GND pin of the Raspberry Pi.
# - Motor A to the left motor.
# - Motor B to the right motor.
