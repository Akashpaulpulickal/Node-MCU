# Import necessary libraries
import RPi.GPIO as GPIO
import time

# Set up GPIO mode
GPIO.setmode(GPIO.BCM)

# Define GPIO pin for tilt sensor
TILT_SENSOR_PIN = 17

# Set up tilt sensor pin as input
GPIO.setup(TILT_SENSOR_PIN, GPIO.IN)

try:
    while True:
        # Read the tilt sensor value
        tilt_detected = GPIO.input(TILT_SENSOR_PIN)
        
        if tilt_detected:
            print("Tilt detected!")
        else:
            print("No tilt detected.")
        
        # Wait for a short period before checking again
        time.sleep(0.5)

except KeyboardInterrupt:
    print("Program terminated")

finally:
    # Clean up GPIO settings
    GPIO.cleanup()

# Connections:
# - VCC pin of the tilt sensor to the 3.3V pin of the Raspberry Pi.
# - GND pin of the tilt sensor to the GND pin of the Raspberry Pi.
# - OUT pin of the tilt sensor to GPIO pin 17 (BCM numbering) of the Raspberry Pi.
