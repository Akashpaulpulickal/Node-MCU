# Import necessary libraries
import RPi.GPIO as GPIO
import time

# Set up GPIO mode
GPIO.setmode(GPIO.BCM)

# Define GPIO pin for Hall sensor
HALL_SENSOR_PIN = 17

# Set up Hall sensor pin as input
GPIO.setup(HALL_SENSOR_PIN, GPIO.IN)

try:
    while True:
        # Read the Hall sensor value
        magnetic_field_detected = GPIO.input(HALL_SENSOR_PIN)
        
        if magnetic_field_detected:
            print("Magnetic field detected!")
        else:
            print("No magnetic field detected.")
        
        # Wait for a short period before checking again
        time.sleep(0.5)

except KeyboardInterrupt:
    print("Program terminated")

finally:
    # Clean up GPIO settings
    GPIO.cleanup()

# Connections:
# - VCC pin of the Hall sensor to the 3.3V pin of the Raspberry Pi.
# - GND pin of the Hall sensor to the GND pin of the Raspberry Pi.
# - OUT pin of the Hall sensor to GPIO pin 17 (BCM numbering) of the Raspberry Pi.
