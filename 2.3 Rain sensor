# Import necessary libraries
import RPi.GPIO as GPIO
import time

# Set up GPIO mode
GPIO.setmode(GPIO.BCM)

# Define GPIO pin for rain sensor
RAIN_SENSOR_PIN = 17

# Set up rain sensor pin as input
GPIO.setup(RAIN_SENSOR_PIN, GPIO.IN)

try:
    while True:
        # Read the rain sensor value
        rain_detected = GPIO.input(RAIN_SENSOR_PIN)
        
        if rain_detected:
            print("Rain detected!")
        else:
            print("No rain detected.")
        
        # Wait for a short period before checking again
        time.sleep(0.5)

except KeyboardInterrupt:
    print("Program terminated")

finally:
    # Clean up GPIO settings
    GPIO.cleanup()

# Connections:
# - VCC pin of the rain sensor to the 3.3V or 5V pin of the Raspberry Pi.
# - GND pin of the rain sensor to the GND pin of the Raspberry Pi.
# - AO (Analog Output) pin of the rain sensor to an ADC (Analog-to-Digital Converter) input pin.
# - DO (Digital Output) pin of the rain sensor to GPIO pin 17 (BCM numbering) of the Raspberry Pi.
