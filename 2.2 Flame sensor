# Import necessary libraries
import RPi.GPIO as GPIO
import time

# Set up GPIO mode
GPIO.setmode(GPIO.BCM)

# Define GPIO pins for flame sensor and buzzer
FLAME_SENSOR_PIN = 17
BUZZER_PIN = 18

# Set up flame sensor pin as input
GPIO.setup(FLAME_SENSOR_PIN, GPIO.IN)

# Set up buzzer pin as output (optional)
GPIO.setup(BUZZER_PIN, GPIO.OUT)

try:
    while True:
        # Read the flame sensor value
        flame_detected = GPIO.input(FLAME_SENSOR_PIN)
        
        if flame_detected:
            print("Flame detected!")
            GPIO.output(BUZZER_PIN, GPIO.HIGH)  # Turn on the buzzer (optional)
        else:
            GPIO.output(BUZZER_PIN, GPIO.LOW)  # Turn off the buzzer (optional)
        
        # Wait for a short period before checking again
        time.sleep(0.5)

except KeyboardInterrupt:
    print("Program terminated")

finally:
    # Clean up GPIO settings
    GPIO.cleanup()

# Connections:
# - VCC pin of the flame sensor to the 3.3V pin of the Raspberry Pi.
# - GND pin of the flame sensor to the GND pin of the Raspberry Pi.
# - DO (Digital Output) pin of the flame sensor to GPIO pin 17 (BCM numbering) of the Raspberry Pi.
# - Positive pin of the buzzer to GPIO pin 18 (BCM numbering) of the Raspberry Pi.
# - Negative pin of the buzzer to the GND pin of the Raspberry Pi.
