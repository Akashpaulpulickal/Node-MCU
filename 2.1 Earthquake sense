# Import necessary libraries
import RPi.GPIO as GPIO
import time

# Set up GPIO mode
GPIO.setmode(GPIO.BCM)

# Define GPIO pins for vibration sensor and buzzer
VIBRATION_SENSOR_PIN = 17
BUZZER_PIN = 18

# Set up vibration sensor pin as input
GPIO.setup(VIBRATION_SENSOR_PIN, GPIO.IN)

# Set up buzzer pin as output
GPIO.setup(BUZZER_PIN, GPIO.OUT)

try:
    while True:
        # Read the vibration sensor value
        vibration_detected = GPIO.input(VIBRATION_SENSOR_PIN)
        
        if vibration_detected:
            print("Vibration detected!")
            GPIO.output(BUZZER_PIN, GPIO.HIGH)  # Turn on the buzzer
        else:
            GPIO.output(BUZZER_PIN, GPIO.LOW)  # Turn off the buzzer
        
        # Wait for a short period before checking again
        time.sleep(0.5)

except KeyboardInterrupt:
    print("Program terminated")

finally:
    # Clean up GPIO settings
    GPIO.cleanup()

# Connections:
# - VCC pin of the vibration sensor to the 3.3V pin of the Raspberry Pi.
# - GND pin of the vibration sensor to the GND pin of the Raspberry Pi.
# - DO (Digital Output) pin of the vibration sensor to GPIO pin 17 (BCM numbering) of the Raspberry Pi.
# - Positive pin of the buzzer to GPIO pin 18 (BCM numbering) of the Raspberry Pi.
# - Negative pin of the buzzer to the GND pin of the Raspberry Pi.
