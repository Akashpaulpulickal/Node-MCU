// Define the LED pins
const int ledPin1 = D1; // GPIO 5
const int ledPin2 = D2; // GPIO 4
const int ledPin3 = D3; // GPIO 0

void setup() {
  // Initialize the LED pins as outputs
  pinMode(ledPin1, OUTPUT);
  pinMode(ledPin2, OUTPUT);
  pinMode(ledPin3, OUTPUT);
}

void loop() {
  // Turn LED 1 on
  digitalWrite(ledPin1, HIGH);
  delay(1000); // Wait for 1 second

  // Turn LED 1 off
  digitalWrite(ledPin1, LOW);
  delay(1000); // Wait for 1 second

  // Turn LED 2 on
  digitalWrite(ledPin2, HIGH);
  delay(1000); // Wait for 1 second

  // Turn LED 2 off
  digitalWrite(ledPin2, LOW);
  delay(1000); // Wait for 1 second

  // Turn LED 3 on
  digitalWrite(ledPin3, HIGH);
  delay(1000); // Wait for 1 second

  // Turn LED 3 off
  digitalWrite(ledPin3, LOW);
  delay(1000); // Wait for 1 second
}

// Connections:
// - Anode (longer leg) of LED 1 to D1 (GPIO 5) pin of the NodeMCU.
// - Cathode (shorter leg) of LED 1 to a 220Ω resistor.
// - The other end of the 220Ω resistor to the GND pin of the NodeMCU.
// - Anode (longer leg) of LED 2 to D2 (GPIO 4) pin of the NodeMCU.
// - Cathode (shorter leg) of LED 2 to a 220Ω resistor.
// - The other end of the 220Ω resistor to the GND pin of the NodeMCU.
// - Anode (longer leg) of LED 3 to D3 (GPIO 0) pin of the NodeMCU.
// - Cathode (shorter leg) of LED 3 to a 220Ω resistor.
// - The other end of the 220Ω resistor to the GND pin of the NodeMCU.
