# Import necessary libraries
import RPi.GPIO as GPIO
import time

# Set up GPIO mode
GPIO.setmode(GPIO.BCM)

# Define GPIO pin for raindrop sensor
RAINDROP_SENSOR_PIN = 17

# Set up raindrop sensor pin as input
GPIO.setup(RAINDROP_SENSOR_PIN, GPIO.IN)

try:
    while True:
        # Read the raindrop sensor value
        rain_detected = GPIO.input(RAINDROP_SENSOR_PIN)
        
        if rain_detected:
            print("Rain detected!")
        else:
            print("No rain detected.")
        
        # Wait for a short period before checking again
        time.sleep(0.5)

except KeyboardInterrupt:
    print("Program terminated")

finally:
    # Clean up GPIO settings
    GPIO.cleanup()

# Connections:
# - VCC pin of the raindrop sensor to the 3.3V or 5V pin of the Raspberry Pi.
# - GND pin of the raindrop sensor to the GND pin of the Raspberry Pi.
# - DO (Digital Output) pin of the raindrop sensor to GPIO pin 17 (BCM numbering) of the Raspberry Pi.
